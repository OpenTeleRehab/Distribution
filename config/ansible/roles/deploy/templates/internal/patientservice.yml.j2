---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: 'app-{{ stage }}-{{ project_name }}-patient'
  namespace: '{{ k8s_namespace }}'
spec:
  selector:
    matchLabels:
      app: 'app-{{ stage }}-{{ project_name }}-patient'
  template:
    metadata:
      labels:
        app: 'app-{{ stage }}-{{ project_name }}-patient'
    spec:
      containers:
        - image: {{ image_name }}/system:{{ patientservice_build_id }}
          name: 'app-{{ stage }}-{{ project_name }}-patient'
          ports:
            - containerPort: 80
          volumeMounts:
          - name: tz-config
            mountPath: /etc/localtime
      volumes:
      - name: tz-config
        hostPath:
          path: {{ tz_path }}

---
apiVersion: v1
kind: Service
metadata:
  name: 'svc-{{ stage }}-{{ project_name }}-patient'
  namespace: '{{ k8s_namespace }}'
spec:
  ports:
    - port: 80
  selector:
    app: 'app-{{ stage }}-{{ project_name }}-patient'
