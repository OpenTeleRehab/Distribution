---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: 'app-{{ stage }}-{{ project_name }}-krakend'
  namespace: '{{ k8s_namespace }}'
  annotations:
    reloader.stakater.com/auto: 'true'
spec:
  selector:
    matchLabels:
      app: 'app-{{ stage }}-{{ project_name }}-krakend'
  template:
    metadata:
      labels:
        app: 'app-{{ stage }}-{{ project_name }}-krakend'
    spec:
      imagePullSecrets:
        - name: secret-{{ project_name }}
      containers:
        - image: {{ image_name }}/krakend:{{ version }}
          name: 'app-{{ stage }}-{{ project_name }}-krakend'
          ports:
            - containerPort: 8000
          volumeMounts:
            - name: tz-config
              mountPath: /etc/localtime
            - name: 'configmap-{{ stage }}-{{ project_name }}-krakend'
              mountPath: /etc/krakend/krakend.json
              subPath: krakend-json
      volumes:
        - name: tz-config
          hostPath:
            path: {{ tz_path }}
        - name: configmap-{{ stage }}-{{ project_name }}-krakend
          configMap:
            name: configmap-{{ stage }}-{{ project_name }}-krakend

---
apiVersion: v1
kind: Service
metadata:
  name: 'svc-{{ stage }}-{{ project_name }}-krakend'
  namespace: '{{ k8s_namespace }}'
spec:
  ports:
    - port: 8000
  selector:
    app: 'app-{{ stage }}-{{ project_name }}-krakend'
