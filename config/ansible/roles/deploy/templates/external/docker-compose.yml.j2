---

version: '3'
networks:
  hiv-docker-net:
  meet.jitsi:

volumes:
  rocketchat_db_data:
  rocketchat_uploads:
  admin_service_vol:
  therapist_service_vol:
  patient_service_vol:

services:
  traefik:
    container_name: 'traefik'
    image: 'traefik:v2.4'
    restart: unless-stopped
    networks:
      - hiv-docker-net
    command:
      - '--api.dashboard=true'
      - '--api.debug=true'
      - '--providers.docker=true'
      - '--providers.docker.exposedbydefault=false'
      - '--entrypoints.web.address=:80'
      - '--entrypoints.websecure.Address=:443'
      - '--accessLog=true'
    ports:
      - '80:80'
      - '443:443'
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock:ro'
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.traefik.rule=Host(`traefik.open-rehab.org`)"
      - "traefik.http.routers.traefik.service=api@internal"
      - "traefik.http.services.traefik.loadbalancer.server.port=8080"
      - "traefik.http.routers.traefik.middlewares=traefik-auth"
      - "traefik.http.middlewares.traefik-auth.basicauth.users=open-rehab:$$apr1$$vlo596z0$$uUJJ9FicOxIi2jz0Y0F3A0"

  admin_webapp:
    container_name: admin_webapp
    image: {{ image_name }}/{{ stage }}/admin-webapp:latest
    restart: unless-stopped
    networks:
      - hiv-docker-net
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.admin_webapp.rule=Host(`{{ admin_webapp_url }}`)'
      - 'traefik.http.routers.admin_webapp.service=admin_webapp'
      - 'traefik.http.services.admin_webapp.loadbalancer.server.port=80'
      - "traefik.http.middlewares.serviceheaders.headers.accesscontrolalloworiginlist=*"
      - "traefik.http.routers.admin_webapp.middlewares=serviceheaders"
    depends_on:
      - keycloak
      - krakend

  therapist_webapp:
    container_name: therapist_webapp
    image: {{ image_name }}/{{ stage }}/therapist-webapp:latest
    restart: unless-stopped
    networks:
      - hiv-docker-net
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.therapist_webapp.rule=Host(`{{ therapist_webapp_url }}`)'
      - 'traefik.http.routers.therapist_webapp.service=therapist_webapp'
      - 'traefik.http.services.therapist_webapp.loadbalancer.server.port=80'
      - "traefik.http.middlewares.serviceheaders.headers.accesscontrolalloworiginlist=*"
      - "traefik.http.routers.therapist_webapp.middlewares=serviceheaders"
    depends_on:
      - keycloak
      - krakend

  library_webapp:
    container_name: library_webapp
    image: {{ image_name }}/{{ stage }}/hicadmin-webapp:latest
    restart: unless-stopped
    networks:
      - hiv-docker-net
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.library_webapp.rule=Host(`{{ hicadmin_webapp_url }}`)'
      - 'traefik.http.routers.library_webapp.service=library_webapp'
      - 'traefik.http.services.library_webapp.loadbalancer.server.port=80'
    depends_on:
      - keycloak
      - krakend

  admin_service:
    container_name: admin_service
    image: {{ image_name }}/{{ stage }}/admin-service:latest
    restart: unless-stopped
    environment:
      LOCAL_USER_ID: 1000
    ports:
      - "2081:80"
    networks:
      - hiv-docker-net
    working_dir: /var/www
    volumes:
      - ./config/adminservice/storage/app/education_material:/var/www/storage/app/education_material
      - ./config/adminservice/storage/app/exercise:/var/www/storage/app/exercise
      - ./config/adminservice/storage/app/exports:/var/www/storage/app/exports
      - ./config/adminservice/storage/app/file:/var/www/storage/app/file
      - ./config/adminservice/storage/app/questionnaire:/var/www/storage/app/questionnaire
      - ./config/adminservice/storage/app/static_page:/var/www/storage/app/static_page
      - ./config/adminservice/storage/logs:/var/www/storage/logs

  therapist_service:
    container_name: therapist_service
    image: {{ image_name }}/{{ stage }}/therapist-service:latest
    restart: unless-stopped
    environment:
      LOCAL_USER_ID: 1000
    ports:
      - "2082:80"
    networks:
      - hiv-docker-net
    working_dir: /var/www
    volumes:
      - ./config/therapistservice/storage/logs:/var/www/storage/logs
    depends_on:
      - admin_service

  patient_service:
    container_name: patient_service
    image: {{ image_name }}/{{ stage }}/patient-service:latest
    restart: unless-stopped
    environment:
      LOCAL_USER_ID: 1000
    networks:
      - hiv-docker-net
    working_dir: /var/www
    volumes:
      - ./config/patientservice/storage/app:/var/www/storage/app
      - ./config/patientservice/storage/logs:/var/www/storage/logs
      - ./config/patientservice/storage/oauth-private.key:/var/www/storage/oauth-private.key
      - ./config/patientservice/storage/oauth-public.key:/var/www/storage/oauth-public.key
    depends_on:
      - admin_service

  library_service:
    container_name: library_service
    image: {{ image_name }}/{{ stage }}/hicadmin-service:latest
    restart: unless-stopped
    environment:
      LOCAL_USER_ID: 1000
    networks:
      - hiv-docker-net
    working_dir: /var/www
    volumes:
      - ./config/libraryservice/storage/app/country:/var/www/storage/app/country
      - ./config/libraryservice/storage/app/education_material:/var/www/storage/app/education_material
      - ./config/libraryservice/storage/app/exercise:/var/www/storage/app/exercise
      - ./config/libraryservice/storage/app/file:/var/www/storage/app/file
      - ./config/libraryservice/storage/app/questionnaire:/var/www/storage/app/questionnaire
      - ./config/libraryservice/storage/app/static_page:/var/www/storage/app/static_page
      - ./config/libraryservice/storage/logs:/var/www/storage/logs
    depends_on:
      - admin_service

  phone_service:
    container_name: phone_service
    image: {{ image_name }}/{{ stage }}/phone-service:latest
    restart: unless-stopped
    ports:
      - "2083:80"
    environment:
      LOCAL_USER_ID: 1000
    networks:
      - hiv-docker-net
    working_dir: /var/www
    volumes:
      - ./config/phoneservice/storage/logs:/var/www/storage/logs
    depends_on:
      - admin_service

  keycloak:
    container_name: keycloak
    image: {{ image_name }}/keycloak:latest
    restart: unless-stopped
    command: start
    networks:
      - hiv-docker-net
    volumes:
      - ./config/keycloak/theme.properties:/opt/keycloak/themes/hi/login/theme.properties
      - ./config/keycloak/theme.properties:/opt/keycloak/themes/open-library/login/theme.properties
    environment:
      KC_DB: mysql
      KC_DB_URL_HOST: {{ my_host }}
      KC_DB_URL: jdbc:mysql://{{ my_host }}:3306/{{ mysql_name_keycloak }}
      KC_DB_USERNAME: {{ mysql_user_keycloak }}
      KC_DB_PASSWORD: {{ mysql_pass_keycloak }}
      KEYCLOAK_ADMIN: admin
      KEYCLOAK_ADMIN_PASSWORD: "{{ keycloak_admin_pass }}"
      KC_IDP_MAPPING_SAML: "{{ keycloak_idp_mapping_saml }}"
      KC_IDP_MAPPING_OIDC: "{{ keycloak_idp_mapping_oidc }}"
      KC_HOSTNAME_STRICT: "false"
      KC_HOSTNAME_STRICT_HTTPS: 'false'
      KC_HTTP_RELATIVE_PATH: "/auth"
      KC_PROXY: "edge"
      JAVA_OPTS: '-Dkeycloak.profile.feature.scripts=enabled
                  -Dkeycloak.profile.feature.upload_scripts=enabled -server -Xms64m -Xmx512m
                  -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m
                  -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
                  -Djava.net.preferIPv4Stack=true
                  -Djboss.modules.system.pkgs=org.jboss.byteman -Djava.awt.headless=true'

  krakend:
    container_name: krakend
    image: {{ image_name }}/{{ stage }}/krakend:latest
    restart: unless-stopped
    ports:
      - "8000:8000"
    networks:
      - hiv-docker-net
    # extra_hosts:
    #   - "{{ vn_patient_service }}:{{ vn_patient_host }}"

  rocketchat:
    container_name: rocketchat
    image: rocketchat/rocket.chat:7.1.0
    restart: unless-stopped
    networks:
      - hiv-docker-net
    volumes:
      - rocketchat_uploads:/app/uploads
    environment:
      - PORT=3000
      - ROOT_URL=https://{{ rocketchat_url }}
      - MONGO_URL=mongodb://rocketchat_mongo:27017/rocketchat
      - MONGO_OPLOG_URL=mongodb://rocketchat_mongo:27017/local
    depends_on:
      - rocketchat_mongo
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.rocketchat.rule=Host(`{{ rocketchat_url }}`)'
      - 'traefik.http.routers.rocketchat.service=rocketchat'
      - 'traefik.http.services.rocketchat.loadbalancer.server.port=3000'

  rocketchat_mongo:
    container_name: rocketchat_mongo
    image: bitnami/mongodb:7.0.15
    networks:
      - hiv-docker-net
    volumes:
      - ./vols/rocketchat_db_data:/bitnami/mongodb
    environment:
      MONGODB_REPLICA_SET_MODE: primary
      MONGODB_REPLICA_SET_NAME: rs0
      MONGODB_INITIAL_PRIMARY_HOST: rocketchat_mongo
      ALLOW_EMPTY_PASSWORD: 'yes'
